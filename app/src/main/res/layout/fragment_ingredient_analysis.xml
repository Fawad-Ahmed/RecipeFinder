<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.mlsdev.recipefinder.view.analysenutrition.IngredientAnalysisViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ingredient_input_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_ingredient_analysis">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_ingredient_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onTextChanged="@{viewModel.onTextChanged}" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_analyze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/til_ingredient_input_holder"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/tab_item_background"
                android:onClick="@{viewModel.onAnalyzeButtonClick}"
                android:text="@string/btn_analyze"
                android:textColor="@android:color/white" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_ingredient_title"
                style="@style/BaseTextViewStyle.NutrientTextStyle"
                android:layout_below="@id/btn_analyze"
                android:gravity="center"
                android:text="@{viewModel.nutrientText}"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_energy"
                style="@style/BaseTextViewStyle.NutrientTextStyle"
                android:layout_below="@id/tv_ingredient_title"
                android:text="@{viewModel.energyText}" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_fat"
                style="@style/BaseTextViewStyle.NutrientTextStyle"
                android:layout_below="@id/tv_energy"
                android:text="@{viewModel.fatText}" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_protein"
                style="@style/BaseTextViewStyle.NutrientTextStyle"
                android:layout_below="@id/tv_fat"
                android:text="@{viewModel.proteinText}" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_carbs"
                style="@style/BaseTextViewStyle.NutrientTextStyle"
                android:layout_below="@id/tv_protein"
                android:text="@{viewModel.carbsText}" />

        </RelativeLayout>

    </ScrollView>
</layout>
